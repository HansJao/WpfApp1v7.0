                    <DataGridTextColumn Header="是否清點完成" Binding="{Binding IsChecked}" Width="50"/>
                    <DataGridTextColumn Header="清點時間" Binding="{Binding CheckDate}"/>
                    <DataGridTextColumn Header="備註" Binding="{Binding Memo}"/>
