<Page x:Class="WpfApp1.Pages.FabricPages.FabricCostQueryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.FabricPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FabricCostPage">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Height="24" VerticalAlignment="Top" Margin="10,10,0,0">
                <Label Content="布種搜尋:" />
                <TextBox Height="24" Width="100" VerticalAlignment="Top" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                <DataGrid HorizontalAlignment="Left"  VerticalAlignment="Top">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="布種編號" Binding="{Binding FabricID}"></DataGridTextColumn>
                        <DataGridTextColumn Header="布種名稱" Binding="{Binding FabricName}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="顏色編號" Binding="{Binding FabricID}"></DataGridTextColumn>
                        <DataGridTextColumn Header="顏色" Binding="{Binding FabricName}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="成分" Binding="{Binding FabricID}"></DataGridTextColumn>
                    <DataGridTextColumn Header="顏色" Binding="{Binding FabricName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="紗支數" Binding="{Binding FabricName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="單價" Binding="{Binding FabricName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="比例" Binding="{Binding FabricName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="群組" Binding="{Binding FabricName}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="加工項目" Binding="{Binding FabricID}"></DataGridTextColumn>
                    <DataGridTextColumn Header="損耗" Binding="{Binding FabricName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="工繳" Binding="{Binding FabricName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="順序" Binding="{Binding FabricName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="群組" Binding="{Binding FabricName}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
