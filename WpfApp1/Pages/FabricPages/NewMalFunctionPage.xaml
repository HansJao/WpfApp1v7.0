<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.FabricPages"
      xmlns:CustomController="clr-namespace:WpfApp1.Utility.CustomController" x:Class="WpfApp1.Pages.FabricPages.MalFunctionPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="新增故障處理">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="客戶名稱:" VerticalAlignment="Top" Width="30" Height="40" TextWrapping="Wrap" />
                    <TextBox Text="{Binding CustomerName,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment ="Top" Margin="0,5,0,0" Height="24" Width="60" />
                </StackPanel>
                <CustomController:CustomerDataGrid ItemsSource="{Binding CustomerNameList}" VerticalAlignment="Top" HorizontalAlignment="Left" CanUserAddRows="False" AutoGenerateColumns="False" MaxHeight="300">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="客戶名稱" Binding="{Binding}"/>
                    </DataGrid.Columns >
                </CustomController:CustomerDataGrid>
            </StackPanel>
            <StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="布種名稱:" VerticalAlignment="Top" Width="30" Height="40" TextWrapping="Wrap" />
                    <TextBox Text="{Binding FabricName,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment ="Top" Margin="0,5,0,0" Height="24" Width="60" />
                </StackPanel>
                <DataGrid ItemsSource="{Binding FabricList}" SelectedItem="{Binding SelectedFabric}" VerticalAlignment="Top" HorizontalAlignment="Left" CanUserAddRows="False" AutoGenerateColumns="False" MaxHeight="300">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="布種名稱" Binding="{Binding FabricName}"/>
                    </DataGrid.Columns >
                </DataGrid>
            </StackPanel>
            <StackPanel>

                <DataGrid ItemsSource="{Binding FabricColorList}" SelectedItem="{Binding SelectedColor}" VerticalAlignment="Top" HorizontalAlignment="Left" CanUserAddRows="False" AutoGenerateColumns="False">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="布種顏色" Binding="{Binding Color}"/>
                    </DataGrid.Columns >
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
